<Window x:Class="EntityBdWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntityBdWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="350" Closing="Window_Closing">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="RegLoginTB" Text="Enter Login" Height="30" Margin="0,39,0,39" Grid.Row="1" Visibility="Hidden"/>
        <TextBox x:Name="RegPassTB" Text="Enter Password" Height="30" Margin="0,78,0,0" Grid.Row="1" Visibility="Hidden"/>
        <Button x:Name="RegisterBTN" Content="Register" Margin="10,10,10,70" Click="Register_Click"/>
        <Button x:Name="LoginBTN" Content="Login" Margin="10,44,10,37" />
        <Button x:Name="ClosingBTN" Content="Close" Margin="10,70,10,10" Click="Close_click" Grid.Row="3"/>
        <Button x:Name="HideEnterBTN" Content="Enter" Margin="10,41,10,42" Grid.Row="2" Visibility="Hidden" Click="HideEnterBTN_Click"/>
        <Button x:Name="HideCloseBTN" Content="Close" Margin="10,72,10,10"  Grid.Row="2" Visibility="Hidden" Click="HideCloseBTN_Click"/>
    </Grid>
</Window>
